
#!/usr/bin/env python3

import argparse
import os
import pdf2images
from loguru import logger


def main():
    parser = argparse.ArgumentParser()
    parser.add_argument(dest="pdf_file")
    parser.add_argument(dest="output_dir")
    parser.add_argument(
        "--max-size",
        default=1280,
        type=int,
        help="max size of either side of the image",
    )